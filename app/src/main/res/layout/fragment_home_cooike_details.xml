<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeCookieDetailsFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back"
            android:padding="@dimen/dp_15"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_n_bg"
            android:textSize="@dimen/sp_20"
            android:text="Profile"
            android:layout_centerHorizontal="true"
            android:gravity="center" />
        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:src="@mipmap/user"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_8"/>
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_toLeftOf="@+id/iv_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/message_big" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Something is Wrong Please Try Again"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_height="match_parent"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">
            <RelativeLayout
                android:id="@+id/rl_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <com.app.homecookie.Util.CircleImageView
                    android:id="@+id/iv_user"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:src="@drawable/user"
                    android:layout_centerVertical="true"
                    android:elevation="@dimen/dp_5"
                    android:layout_margin="@dimen/dp_10"/>
                <LinearLayout
                    android:layout_toRightOf="@+id/iv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_16"
                            android:id="@+id/tv_lbl_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edward Patriks"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_16"
                            android:id="@+id/tv_name" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_toRightOf="@+id/iv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age"
                                android:singleLine="true"
                                android:textSize="@dimen/sp_16"
                                android:id="@+id/tv_lbl_age" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:textSize="@dimen/sp_16"
                                android:id="@+id/tv_age" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@+id/iv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/occupation_"
                                android:singleLine="true"
                                android:textSize="@dimen/sp_16"
                                android:id="@+id/tv_lbl_occ" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chef"
                                android:layout_weight="1"
                                android:textSize="@dimen/sp_16"
                                android:id="@+id/tv_occ" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/rl_user_profile"
                android:orientation="vertical"
                android:id="@+id/data_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="HomeCookie Rating :"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_16"
                        android:id="@+id/tv_lbl_home_cook_rating" />
                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10">
                        <RatingBar
                            android:id="@+id/rating_bar_recipe"
                            android:layout_below="@+id/tv_recipe_name"
                            android:background="@color/white"
                            style="@style/largeRatingBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:isIndicator="true"
                            android:stepSize="1" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_chat"
                        android:layout_weight="1"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/chat"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textAllCaps="false"
                        android:stateListAnimator="@null"/>
                    <Button
                        android:id="@+id/button_follow"
                        android:layout_weight="1"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/follow"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textAllCaps="false"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_edit"
                        android:layout_weight="1"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/edit"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textAllCaps="false"
                        android:stateListAnimator="@null"/>
                    <Button
                        android:id="@+id/button_logout"
                        android:layout_weight="1"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16"
                        android:text="@string/logout"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textAllCaps="false"
                        android:stateListAnimator="@null"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description :"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_lbl_desc" />
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I love to cook Japanese food for my 3 young children."
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_recipes_1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_text"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_lbl_my_recipes" />
                <android.support.v7.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/recipes_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <Button
                    android:id="@+id/button_post_recipe"
                    android:layout_weight="1"
                    android:layout_below="@+id/et_confirm_password"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/button_bg_drawable"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/post_a_recipe"
                    android:textColor="@drawable/button_bg_drawable"
                    android:textAllCaps="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_meals"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_text"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_lbl_my_meals" />
                <android.support.v7.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/meals_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <Button
                    android:id="@+id/button_post_meal"
                    android:layout_weight="1"
                    android:layout_below="@+id/et_confirm_password"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/button_bg_drawable"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/post_a_meal"
                    android:textColor="@drawable/button_bg_drawable"
                    android:textAllCaps="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_lessons"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black_text"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/tv_lbl_my_lessons" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lessons_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <Button
                    android:id="@+id/button_post_lesson"
                    android:layout_weight="1"
                    android:layout_below="@+id/et_confirm_password"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/button_bg_drawable"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/post_a_lesson"
                    android:textColor="@drawable/button_bg_drawable"
                    android:textAllCaps="false"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_add_payment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg_drawable"
                        android:text="@string/add_payment"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16" />

                    <Button
                        android:id="@+id/button_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg_drawable"
                        android:text="@string/delivery_address"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
