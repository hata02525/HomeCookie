<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_30"
    android:paddingLeft="@dimen/dp_30"
    tools:context="com.app.homecookie.Fragments.AddIngredientsFragment">
    <TextView
        android:id="@+id/tv_step"
        android:text="Step 1:"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_qty"
        android:layout_below="@+id/tv_step"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/normal_drawable">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Qty"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/dp_0.3"
                android:layout_height="match_parent"
                android:background="@color/box_color"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Unit"
                    android:gravity="center"/>
                <View
                    android:id="@+id/view_1"
                    android:layout_width="@dimen/dp_0.3"
                    android:layout_height="match_parent"
                    android:background="@color/box_color"/>
                <ImageView
                    android:id="@+id/iv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/dropdown"
                    android:padding="@dimen/dp_5"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:background="@color/box_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/dp_0.3"
                android:layout_height="match_parent"
                android:background="@color/box_color"/>
            <LinearLayout
                android:id="@+id/rl_choose_category"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/tv_choose_category"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="grams"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/ll_qty"
        android:id="@+id/rl_search_ingredients"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/normal_drawable">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Ingredients"
            android:textSize="@dimen/sp_15"
            android:background="@null"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"/>
        <View
            android:id="@+id/view_2"
            android:layout_below="@id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.3"
            android:background="@color/box_color"/>

        <ImageView
            android:id="@+id/iv_item"
            android:layout_below="@+id/view_2"
            android:layout_margin="@dimen/dp_5"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/post"/>

        <TextView
            android:id="@+id/tv_item"
            android:layout_below="@id/et_search"
            android:layout_toRightOf="@id/iv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="Sauce"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_instruction"
        android:layout_below="@+id/rl_search_ingredients"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/normal_drawable">
        <EditText
            android:id="@+id/et_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:hint="Comments"
            android:textSize="@dimen/sp_15"
            android:background="@null"
            android:gravity="left"/>
    </RelativeLayout>


    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/rl_add_step"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/button_bg_drawable"
        android:layout_centerHorizontal="true"
        android:text="Add Ingredients"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textColor="@drawable/button_bg_drawable"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>
