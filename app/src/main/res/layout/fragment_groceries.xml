<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_n_bg"
    tools:context="com.app.homecookie.Fragments.GroceriesFragment">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/font_n_bg"
            android:textSize="@dimen/sp_20"
            android:text="My Groceries"
            android:layout_centerHorizontal="true"
            android:gravity="center" />
        <com.app.homecookie.Util.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:src="@mipmap/user"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_12"/>
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_toLeftOf="@+id/iv_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/message_big" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_layout"
        android:layout_above="@+id/btn_buy">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="@dimen/dp_240">
            <RelativeLayout
                android:id="@+id/rl_no_data"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="No Ingredient in Your Grocery List"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5">
                    <TextView
                        android:id="@+id/tv_groceries_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="My Groceries"
                        android:gravity="center"
                        android:textColor="@color/brwon_text"
                        android:textSize="@dimen/sp_18"/>
                    <ImageView
                        android:id="@+id/button_add_new"
                        android:layout_below="@+id/et_confirm_password"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:src="@mipmap/navigation"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_below="@+id/rl_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <Button
                    android:id="@+id/button_add_ingredients"
                    android:layout_below="@+id/et_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/button_bg_drawable"
                    android:textSize="@dimen/sp_15"
                    android:text="Add Ingredients"
                    android:textColor="@drawable/button_bg_drawable"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/tv_clear_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/clear_list"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/edit_text_bg_focused"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/black_view"/>
            <TextView
                android:id="@+id/tv_user_lbl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="I Have These Ingredients"
                android:textColor="@color/brwon_text"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:textSize="@dimen/sp_16"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_1"
                android:layout_below="@+id/rl_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/button_buy_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:background="@drawable/button_bg_drawable"
            android:textSize="@dimen/sp_15"
            android:text="Buy Ingredients"
            android:layout_centerHorizontal="true"
            android:textColor="@drawable/button_bg_drawable"
            android:textAllCaps="false"/>
    </RelativeLayout>

</RelativeLayout>
