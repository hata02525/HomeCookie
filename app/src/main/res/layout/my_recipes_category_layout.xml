<?xml version="1.0" encoding="utf-8"?>
<com.app.homecookie.Util.swipe.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    app:dragEdge="right"
    app:mode="same_level"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_120"
        android:layout_height="match_parent"
        android:background="@drawable/layout_box"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        app:cardElevation="@dimen/dp_5">
        <ImageView
            android:id="@+id/iv_recipes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_open_gallery"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RatingBar
            android:id="@+id/rating_bar_recipe"
            android:background="@color/white"
            style="@style/largeRatingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1"
            android:stepSize="1"
            android:layout_marginTop="@dimen/dp_10" />
            <TextView
                android:id="@+id/tv_recipe_name"
                android:layout_below="@+id/rating_bar_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:text="Orange Melon Cups"/>
        <TextView
            android:id="@+id/tv_comments"
            android:layout_below="@+id/tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_14"
            android:text="Orange Melon Cups"/>
    </RelativeLayout>

</LinearLayout>

    </FrameLayout>

</com.app.homecookie.Util.swipe.SwipeRevealLayout>
