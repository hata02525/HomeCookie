<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.homecookie.Fragments.DeliveryAddressFragment">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/dp_4">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_back"
            android:src="@mipmap/back"
            android:padding="@dimen/dp_15"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_header"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/choose_your_delivery_address"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/font_n_bg"/>
    </RelativeLayout>
   <ScrollView
       android:layout_below="@+id/toolbar"
       android:id="@+id/main_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_20"
               android:layout_marginRight="@dimen/dp_20"
               android:layout_marginTop="@dimen/dp_30"
               android:layout_marginBottom="@dimen/dp_20"
               android:background="@color/black_text"
               app:cardElevation="@dimen/dp_4"
               app:cardCornerRadius="@dimen/dp_4">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="100"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="80"
                       android:text="@string/add_new_address"
                       android:paddingLeft="@dimen/dp_30"
                       android:paddingTop="@dimen/dp_15"
                       android:paddingBottom="@dimen/dp_15"
                       android:gravity="center_vertical"
                       android:textSize="@dimen/sp_16"
                       android:id="@+id/tv_lbl_add_address" />
                   <TextView
                       android:id="@+id/tv_add"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight="20"
                       android:text="+"
                       android:textStyle="bold"
                       android:paddingLeft="@dimen/dp_30"
                       android:paddingTop="@dimen/dp_15"
                       android:paddingBottom="@dimen/dp_15"
                       android:textSize="@dimen/sp_24"
                       android:textColor="@color/colorPrimary"/>

               </LinearLayout>
           </android.support.v7.widget.CardView>
           <RelativeLayout
               android:id="@+id/rl_no_data"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_240"
               android:visibility="gone">
               <TextView
                   android:id="@+id/tv_no_data"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:text="Something is Wrong Please Try Again"/>
           </RelativeLayout>
           <android.support.v7.widget.RecyclerView
               android:id="@+id/recyclerView"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           </android.support.v7.widget.RecyclerView>

       </LinearLayout>
   </ScrollView>


</RelativeLayout>
