<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_60"
    android:layout_marginRight="@dimen/dp_60"
    app:cardElevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_10">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="Choose Profile Picture"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_open_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="@dimen/dp_20"
                android:src="@drawable/ic_open_camera" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.3"
                android:background="@color/black_text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="@string/camera"
                android:textColor="@color/black_text" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_0.3"
            android:layout_height="match_parent"
            android:background="@color/black_text"/>
        <LinearLayout
            android:id="@+id/ll_open_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="@dimen/dp_20"
                android:src="@drawable/ic_open_gallery" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.3"
                android:background="@color/black_text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="@string/gallery"
                android:textColor="@color/black_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>