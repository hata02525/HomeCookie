<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">
        <com.app.homecookie.Util.CircleImageView
            android:id="@+id/iv_photo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Adam Nicolas"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black_text"/>

            <TextView
                android:id="@+id/tv_added"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:text="Added"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_18"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical|right"
                android:drawableLeft="@mipmap/tick"
                android:paddingRight="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_15"/>
        <Button
            android:id="@+id/button_add"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/button_bg_drawable"
            android:text="@string/add"
            android:textColor="@drawable/button_bg_drawable"
            android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>