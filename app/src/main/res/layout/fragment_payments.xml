<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/font_n_bg"
        tools:context="com.app.homecookie.Fragments.PaymentsFragment">
    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/dp_4">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/iv_back"
                android:src="@mipmap/back"
                android:padding="@dimen/dp_15"/>
        <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/payments"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/font_n_bg"/>
    </RelativeLayout>

    <ScrollView
            android:layout_below="@+id/toolbar"
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:text="Saved Card"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:textStyle="bold"
                    android:id="@+id/tv_lbl_saved_card"/>
            <RelativeLayout
                    android:id="@+id/rl_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:visibility="gone">
                <TextView
                        android:id="@+id/tv_no_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No Card Found"
                        android:gravity="center"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
            </android.support.v7.widget.RecyclerView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:text="OR"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:textStyle="bold"
                    android:id="@+id/tv_or"/>
            <android.support.v7.widget.CardView
                    android:id="@+id/card_atm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    app:cardCornerRadius="@dimen/dp_4"
                    android:elevation="@dimen/dp_5">
                <LinearLayout
                        android:id="@+id/ll_atm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Credit/ Debit/ ATM Card"
                            android:padding="@dimen/dp_15"
                            android:layout_weight="85"
                            android:textSize="@dimen/sp_16"
                            android:id="@+id/tv_atm"/>
                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15">
                        <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/radio_button_drawable"
                                android:background="@null"
                                android:layout_centerInParent="true"
                                android:checked="false"
                                android:id="@+id/cb_atm"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/card_net_banking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_4"
                    android:elevation="@dimen/dp_5">
                <LinearLayout
                        android:id="@+id/ll_net_banking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/net_banking"
                            android:padding="@dimen/dp_15"
                            android:layout_weight="85"
                            android:textSize="@dimen/sp_16"
                            android:id="@+id/tv_net_banking"/>
                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15">
                        <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/radio_button_drawable"
                                android:background="@null"
                                android:layout_centerInParent="true"
                                android:checked="false"
                                android:id="@+id/cb_net_banking"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/card_cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_4"
                    android:elevation="@dimen/dp_5">
                <LinearLayout
                        android:id="@+id/ll_cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Cash on Delivery"
                            android:padding="@dimen/dp_15"
                            android:layout_weight="85"
                            android:textSize="@dimen/sp_16"
                            android:id="@+id/tv_cash_on_delivery"/>
                    <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15">
                        <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/radio_button_drawable"
                                android:background="@null"
                                android:layout_centerInParent="true"
                                android:checked="false"
                                android:id="@+id/cb_cash"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_country"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">

                <Button
                        android:id="@+id/button_next"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_centerInParent="true"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingRight="@dimen/dp_50"
                        android:background="@drawable/button_bg_drawable"
                        android:text="@string/next"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_bg_drawable"
                        android:textSize="@dimen/sp_16"/>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>

