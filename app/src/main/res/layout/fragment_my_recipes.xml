<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_n_bg"
    tools:context="com.app.homecookie.Fragments.MyRecipesFragment">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/dp_4">
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="My Recipes"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/font_n_bg"/>
        <com.app.homecookie.Util.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:src="@mipmap/user"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_12"/>
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_toLeftOf="@+id/iv_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/message_big" />
    </RelativeLayout>
<RelativeLayout
    android:layout_below="@+id/toolbar"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:visibility="gone">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Category Name"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_18"/>
    <Button
        android:id="@+id/button_add_new"
        android:visibility="gone"
        android:layout_below="@+id/et_confirm_password"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/button_bg_drawable"
        android:textSize="@dimen/sp_16"
        android:text="Add New"
        android:textColor="@drawable/button_bg_drawable"
        android:textAllCaps="false"/>

</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_my_recipes"
        android:layout_below="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/rl_no_internet"
        android:visibility="gone"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Connection Please \nTry Again"
            android:textSize="@dimen/sp_16"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>
